package com.pattern;

public class p11_10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
	/*	    *
		   ***
		  *****
		 *******
		*********
*/
		int n=5;
		for(int i=1;i<=n;i++) {
			for(int j=n-1;j>=i;j--) {
				System.out.print(" ");
			}
			for(int j=1;j<(i*2);j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		rev();
	}
public static void rev() {
	
	int n=5;
	for(int j=n;j>=1;j--) {
		for(int i=n;i>j;i--) {
			System.out.print(" ");
		}
		for(int i=1;i<=(j*2)-1;i++) {
			System.out.print("*");
		}
		System.out.println();
	}
}
}
